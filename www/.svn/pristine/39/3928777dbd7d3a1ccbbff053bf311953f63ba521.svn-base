@charset "utf-8";
.join_1 {
  width: 100%;
  background: #f3f3f3;
}

.join_2 {
  width: 100%;
  background: #f3f3f3;
}

.join_2_1 {
  width: 66vw;
  margin-left: 16.5%;
  background: #fff;
}

.join_2_1 h1 {
  text-align: center;
  font-family: '微软雅黑', Arial, sans-serif;
  font-size: 30px;
  color: #333333;
  line-height: 200%;
}

.join_2_1 .mail {
  text-align: center;
  font-family: '微软雅黑', Arial, sans-serif;
  font-size: 25px;
  color: #999999;
  line-height: 200%;
}

.join_nav {
  padding-top: 30px;
  font-family: '微软雅黑', Arial, sans-serif;
  font-size: 18px;
  color: #333333;
  line-height: 200%;

  display: inline;
  white-space: nowrap;
  overflow-x:scroll;
  float:left;
  overflow-y:hidden;
}

.tab-content {
  padding-top: 30px;
}

@media (min-width: 768px) {
  .join_nav, .tab-content {
    width: 512px;
    padding-left: 28px;
    padding-right: 28px;
  }
}

@media (min-width: 992px) {
  .join_nav, .tab-content {
    width: 662px;
    padding-left: 36px;
    padding-right: 36px;
  }
}

@media (min-width: 1200px) {
  .join_nav, .tab-content {
    width: 800px;
    padding-left: 44px;
    padding-right: 44px;
  }
}

@media (min-width: 1600px) {
  .join_nav, .tab-content {
    width: 1066px;
    padding-left: 58px;
    padding-right: 58px;
  }
}

@media (min-width: 1900px) {
  .join_nav, .tab-content {
    width: 1280px;
    padding-left: 70px;
    padding-right: 70px;
  }
}

.tab-pane {
  width: auto;
  text-align: left;
  font-family: '微软雅黑', Arial, sans-serif;
  font-size: 18px;
  color: #666666;
  line-height: 180%;
  padding-top: 10px;
  padding-bottom: 30px;

}

.tab-pane h2 {
  font-family: '微软雅黑', Arial, sans-serif;
  font-size: 18px;
  color: #666666;
  line-height: 180%;
  padding-top: 20px;
}

.tab-pane ul li {
  background-image: url(../images/list-disc.png);
  background-repeat: no-repeat;
  background-position: 0px 15px;
  padding-left: 20px;
  color: #333;
}

.join_footer {
  width: 100%;
  height: 50px;
  background: #f3f3f3;
}
