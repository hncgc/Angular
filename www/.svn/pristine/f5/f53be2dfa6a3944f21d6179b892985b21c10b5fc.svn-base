@charset "utf-8";
.join_1 {
  width: 100%;
  height: 2000px;
  position: relative;
  background: #f3f3f3;
}
.join_1_1 {
  width: 66.5vw;
  height: auto!important;
  _height: 1300px;
  height: 1300px;
  min-height: 1300px;
  position: absolute;
  left: 16.2%;
  top: 36vw;
  z-index: 99;
  background: #fff;
}
.join_1_1_1 {
  margin-top: 20px;
  text-align: center;
}
.join_1_1_1 h1 {
  font-family: '微软雅黑', Arial, sans-serif;
  font-size: 40px;
  color: #333333;
  line-height: 200%;
}
.join_1_1_1 .mail {
  font-family: '微软雅黑', Arial, sans-serif;
  font-size: 33px;
  color: #999999;
  line-height: 200%;
}
.join_nav {
  padding-top: 30px;
  font-family: '微软雅黑', Arial, sans-serif;
  font-size: 25px;
  color: #333333;
  line-height: 200%;
}
.join_content {
  padding-top: 30px;
}
@media (min-width: 768px) {
  .join_1 {
    height: 2500px;
  }
  .join_nav,
  .join_content {
    width: 512px;
    padding-left: 28px;
    padding-right: 28px;
  }
}
@media (min-width: 992px) {
  .join_1 {
    height: 1950px;
  }
  .join_nav,
  .join_content {
    width: 662px;
    padding-left: 36px;
    padding-right: 36px;
  }
}
@media (min-width: 1200px) {
  .join_1 {
    height: 1980px;
  }
  .join_nav,
  .join_content {
    width: 800px;
    padding-left: 44px;
    padding-right: 44px;
  }
}
@media (min-width: 1600px) {
  .join_1 {
    height: 2000px;
  }
  .join_nav,
  .join_content {
    width: 1066px;
    padding-left: 58px;
