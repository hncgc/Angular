.nav_scroll {
  display: -webkit-box;
  overflow-x: scroll;
  -webkit-overflow-scrolling:touch;

  width:320px;
  display: inline;
  white-space: nowrap;
  overflow-x:scroll;
  float:left;
  overflow-y:hidden;
}

.nav > li {
  display: inline-block;
}

.nav > li > a {
  display: inline-block;
}

.nav-tabs.nav-justified {
  width: auto!important;
  border-bottom: 0;
}
