@charset "utf-8";
@width_main: 970px;
@bg_color_main:#fff;
@carousel_height: 800px;

.picture_1 {
  position: relative;
  padding-top: 118px;
  padding-bottom: 0px;
  height: auto !important;
  height: 800px;
  min-height: 800px;
  background: #fff;
  clear: both;
}

.picture {
  height: auto !important;
  margin-left: auto;
  margin-right: auto;
  clear: both;
}

.picture_left {
  text-align: right;
  float: left;
}

.picture_right {
  text-align: left;
  float: right;
}

@media only screen and (min-width: 1080px) {
  .picture_left {
    width: 48%;
  }

  .picture_right {
    width: 48%;
  }
}

.item_left {
  text-align: left;
  float: right;
}

.item_right {
  text-align: left;
  float: left;
}

.item_title {
  line-height: 250%;
  font-family: '微软雅黑', Arial, sans-serif;
  font-size: 56px;
  color: #333333;

  width: 120px;
  border-bottom-style: solid;
  border-bottom-color: #0084ff;
  border-bottom-width: 6px;
}

.item_line {
}

.item_text {
  line-height: 350%;
  font-family: '微软雅黑', Arial, sans-serif;
  font-size: 35px;
  color: #999999;
}

.picture_3 {
  padding-top: 0px;
  padding-bottom: 0px;
  height: auto !important;
  height: 748px;
  min-height: 748px;
  background: #fff;
}

.picture_5 {
  padding-top: 0px;
  padding-bottom: 0px;
  height: auto !important;
  height: 800px;
  min-height: 800px;
  background: #fff;
}

.picture_2 {
  padding-top: 93px;
  padding-bottom: 0px;
  height: auto !important;
  height: 798px;
  min-height: 798px;
  background: #f5f5f5;
}

.download {
  margin: 0 auto;
  height: auto !important;
  height: 500px;
  min-height: 500px;
  text-align: center;
  background: #f5f5f5;
}

.download_box {
  margin: 0 auto;
  text-align: center;
}

.download_left {
  margin: 150px;
  text-align: right;
  float: left;
}

.download_right {
  margin: 100px;
  text-align: left;
  float: right;
}

.download_left_in {
  text-align: left;
}

.download_text {
  margin-left: 30px;
  max-width: 450px;
  font-family: '微软雅黑', Arial, sans-serif;
  font-size: 35px;
  line-height: 100%;
  /*
  height: 35px;
  padding-left: 10px;
  padding-top: 0px;
  border-left-style:solid;
  border-left-color: #0084ff;
  border-left-width: 6px;
  */

}

.download_img {
  margin-top: 40px;
  margin-left: 30px;
  max-width: 420px;
}

.download_img img {
  width: 100%;
}

.index_box {
  height: auto !important;
  height: 720px;
  min-height: 720px;
  background: url(../images/index/bg_1.png) repeat-x left top;
  clear: both;
}

.index_box_1 {
  /*width: 1180px;*/
  max-width: 1180px;
  margin: 0px auto;
  padding-top: 40px;
  padding-bottom: 40px;
  clear: both;
}

.index_box_2 {
  margin: 0 auto;
  padding: 40px;
  text-align: center;
  /*width: 1180px;*/
  max-width: 1180px;
  height: auto !important;
  height: 480px;
  min-height: 480px;
  background: #f5f5f5;
  clear: both;
}

.index_box_3 {
  /*width: 530px;*/
  max-width: 530px;
  height: auto !important;
  height: 200px;
  min-height: 200px;
  margin: auto;
  padding-left: 30px;
  float: left;
}

.index_box_img {
  float: left;
}

.index_box_content {
  float: left;
}

.content {
  width: 330px;
  padding: 20px;
  float: left;
}

.text_content_1, .text_content_2, .text_content_3 {
  font-family: "Helvetica Neue", 'Helvetica', 'sans-serif', 'Microsoft Yahei', '微软雅黑', Arial, sans-serif;
  font-size: 16px;
  line-height: 135%;
  color: #494848;
}

.text_content_1 {
  height: 100px;
  text-align: left;
}

.text_content_2 {
  height: 30px;
  text-align: left;
  float: left;
}

.text_content_3 {
  height: 30px;
  float: right;
  text-align: left;
  color: #0084ff;
}

.text_content_3 a {
  color: #0084ff;
}


