    padding-bottom: 10px;
    margin-left: auto;
    margin-right: auto;
    clear:both;
}

.footer_line hr {
    align: cente;
    width: 100%;
    size: 0.2px;
    color: #444444;
    noshade: noshade;
}

.copyright {
    margin: 10px auto;
    text-align: center;
    font-family: '微软雅黑', Arial, sans-serif;
    font-size: 16px;
    color: #888d98;
    clear: both;
}
.copyright ul {
    list-style: none;
}

.copyright li {
    display: block;
    float: left;
}

