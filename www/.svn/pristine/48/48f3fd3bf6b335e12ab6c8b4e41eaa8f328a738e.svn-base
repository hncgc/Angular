#lunbobox ul {
  width: 285px;
  position: absolute;
  bottom: 35px;
  z-index: 5;
  right: 650px;
  text-align: center;
  display: none;
}
#lunbobox ul li {
  cursor: pointer;
  width: 12px;
  height: 6px;
  border: 1px solid #cccccc;
  float: left;
  list-style: none;
  background: #cccccc;
  text-align: center;
  margin: 0px 5px 0px 0px;
}
#toleft {
  display: none;
  width: 30px;
  height: 100px;
  font-size: 40px;
  line-height: 100px;
  text-align: center;
  color: #f4f4f4;
  position: absolute;
  top: 90px;
  left: 12px;
  cursor: pointer;
  z-index: 99;
  opacity: 0.4;
}
#toright {
  display: none;
  width: 30px;
  height: 100px;
  font-size: 40px;
  line-height: 100px;
  text-align: center;
  color: #f4f4f4;
  position: absolute;
  top: 90px;
  right: 0px;
  cursor: pointer;
  z-index: 99;
  opacity: 0.4;
}
.picture_1 {
  position: relative;
  padding-top: 118px;
  padding-bottom: 0px;
  height: auto !important;
  height: 800px;
  min-height: 800px;
  background: #fff;
  clear: both;
}
.picture {
  height: auto !important;
  margin-left: auto;
  margin-right: auto;
  clear: both;
}
.picture_left {
  text-align: right;
  float: left;
}
.picture_right {
  text-align: left;
  float: right;
}
@media only screen and (min-width: 1080px) {
  .picture_left {
    width: 48%;
  }
  .picture_right {
    width: 48%;
  }
}
.item_left {
  text-align: left;
  float: right;
}
.item_right {
  text-align: left;
  float: left;
}
.item_title {
  line-height: 250%;
  font-family: '微软雅黑', Arial, sans-serif;
  font-size: 56px;
  color: #333333;
  width: 120px;
  border-bottom-style: solid;
  border-bottom-color: #0084ff;
  border-bottom-width: 6px;
}
.item_text {
  line-height: 350%;
  font-family: '微软雅黑', Arial, sans-serif;
  font-size: 35px;
  color: #999999;
}
.picture_3 {
  padding-top: 0px;
  padding-bottom: 0px;
  height: auto !important;
  height: 748px;
  min-height: 748px;
  background: #fff;
}
.picture_5 {
  padding-top: 0px;
