.index_box {
  height: auto !important;
  height: 720px;
  min-height: 720px;
  background: url(../images/index/bg_1.png) repeat-x left top;
  clear: both;
}
.index_box_1 {
  /*width: 1180px;*/
  max-width: 1180px;
  margin: 0px auto;
