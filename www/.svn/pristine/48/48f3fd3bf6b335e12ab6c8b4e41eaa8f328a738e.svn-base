@charset "utf-8";
.slide_box {
  position: relative;
  clear: both;
  /*height: auto !important;*/
  height: 800px;
  /*
  _height: @carousel_height;
  min-height: @carousel_height;
  */
  overflow: hidden;
}
#lunbobox {
  /*width: 100%;*/
  height: 800px;
  position: relative;
}
.lunbo {
  height: 800px;
}
.lunbo img {
  width: 100%;
  height: 800px;
  position: absolute;
  top: 0px;
  left: 0px;
}
@media only screen and (max-width: 640px) {
  .slide_box {
    height: 267px;
  }
  #lunbobox {
    height: 267px;
  }
  .lunbo {
    height: 267px;
  }
  .lunbo img {
    height: 267px;
  }
}
